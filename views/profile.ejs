<% if(email.email) { %>
<!DOCTYPE html>
<html ng-app="Movie">

<% include ../layout/head %>

<body ng-controller="profileController" style="padding:0; margin: 0">
    <input type="hidden" id="token" value="<%= token %>" />
    <% include ../layout/header %>
    <section style="margin-top: 50px; width: 82%; padding-left: 2%; min-height: 490px" class="col-md-7 col-md-offset-1">
        <div class="row panel panel-warning " style="margin-top:2%;">
            <div class="panel-heading lead ">
                <div class="row">
                    <div class="col-lg-8 col-md-8"><i class="fas fa-user" style="padding-top: 10px"></i> My Profile</div>
                    <div class="col-lg-4 col-md-4 text-right">
                        <div class="btn-group text-center">
                            <a onclick="showFormEdit()" style="background-color: white;" id="eventForShow"
                                class="btn btn-sm"><i style="color: #8a6d3b;" class="fa fa-edit fa-1x"></i></a>
                            <a onclick="cancelFormEdit()" id="eventForClose" style=" display: none"
                                class="btn btn-sm"><i style="color: #8a6d3b" class="fa fa-edit fa-1x"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12">

                        <div class="row">
                            <div class="col-lg-3 col-md-3">
                                <center>
                                    <span class="text-center">
                                        <img ng-src="{{userProfile.image}}" id="image" style="min-width: 200px; min-width: 200px; width: 200px; object-fit: scale-down;height:200px;max-height: 200px; min-height: 200px"
                                            class="img-responsive img-thumbnail">
                                        <div class="table-responsive panel">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="text-center">
                                                            <div class="input-group">
                                                                <span class="input-group-btn">
                                                                    <span id="change-button" style="width: 120px; margin-left: 45px"
                                                                        class="btn btn-file">
                                                                        Change Avatar
                                                                        <input ng-model="userProfile.image" accept="image/png, image/jpeg"
                                                                            name="file" type="file" id="files">
                                                                    </span>
                                                                </span>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </span>
                            </div>
                            <div class="col-lg-9 col-md-9">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#Summery" class="text-success"><i
                                                class="fa fa-indent"></i> Summery</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div id="Summery" class="tab-pane fade in active">
                                        <div class="table-responsive panel">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="text-success"><i class="fas fa-envelope-square"></i>
                                                            Email</td>
                                                        <td style = "font-weight: bold; word-break: break-all!important;">
                                                            <p>{{userProfile.email}}</p>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-success"><i class="fa fa-user"></i> Name</td>
                                                        <td class="label-userprofile">{{userProfile.name}}</td>
                                                        <td class="input-userprofile"><input ng-model="userProfile.name"
                                                                type="text" ng-value="userProfile.name" class="form-control"
                                                                placeholder="Name"></td>
                                                    </tr>
                                                    <tr >
                                                        <td class="text-success"><i class="fas fa-calendar-check"></i>
                                                            Birthday</td>
                                                        <td class="label-userprofile" style="word-break:break-word">{{userProfile.birthday | date:'dd/MM/yyyy'}}</td>
                                                        <td class="input-userprofile" >
                                                            <input name="date" ng-model="userProfile.birthday" ng-value="userProfile.birthday | date: 'dd/MM/yyyy'" type="text" class="form-control input-data" id="datepicker"
                                                                aria-invalid="false" aria-required="true">
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-success"><i class="fa fa-book"></i> Description</td>
                                                        <td class="label-userprofile" style="word-break:break-word">{{userProfile.description}}</td>
                                                        <td class="input-userprofile"><textarea ng-model="userProfile.description"
                                                                ng-value="userProfile.description" type="text" class="form-control"
                                                                placeholder="Description"></textarea></td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                        <% if(email.email) { %>
                                            <a  data-toggle="modal" data-target=".bs-changePass-modal-sm" id="btnChangePass" style="color:black; background-color: coral; color: white" id="eventForClose" class="btn btn-sm">Change Password</a>
                                            <% } %>
                                        <div class="col-xs-12" style="text-align: center">
                                            <button type="button" id="btnCancel" onclick="cancelFormEdit()" class="btn">Cancel</button>
                                            <button type="button" id="btnEdit" ng-click="update()"
                                                style="background-color: coral; color: white" class="btn">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
        </div>
    </section>
    <% include ../layout/footer %>
    <div class="modal bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                    <div class="modal-body text-center" style="padding: 50px 0 50px 0;"><i class="fa fa-question-circle"></i> Are you sure you want to log-out?</div>
                    <div class="modal-footer center">
                      <a href="#" data-dismiss="modal" style="color:white; font-weight: bold;float: left;background-color: darkred!important"class="btn">Cancel</a>
                      <a href="/logout" style="color:white; font-weight: bold;background-color: coral!important"class="btn ">Logout</a>
                    </div>
            </div>
        </div>
    </div>
    <div class="modal bs-changePass-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header text-center" style="color:coral">
                    <h4 style="font-weight: bold">Change Password</h4>
                </div>
                <div class="modal-body ">
                    <h5 style="color: coral; font-weight: bold">Old Password</h5>
                    <input ng-model="oldPassword" type="password" class="form-control"
                        placeholder="old password">
                    <h5 style="color: coral; font-weight: bold">New Password <span class="label label-warning">New</span></h5>
                    <input ng-model="newPassword" type="password" class="form-control"
                        placeholder="password">
                    <h5 style="color: coral; font-weight: bold">Confirm Password <span class="label label-warning">New</span></h5>
                    <input ng-model="confirmPassword" type="password"  class="form-control"
                        placeholder="password">
                </div>
                    <div class="modal-footer center">
                        <a href="#" data-dismiss="modal" style="color:white; font-weight: bold;float: left;background-color: darkred!important"class="btn">Cancel</a>
                        <a ng-click="changePassword()" style="color:white; font-weight: bold;background-color: coral!important"class="btn ">Change</a>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
    crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
<script src="/javascripts/bootstrap-notify-3.1.3/bootstrap-notify.min.js"></script>
<script src="/javascripts/apiService.js"></script>
<script src="/javascripts/User/profile.js"></script>
<script>
        $(function () {
            $("#datepicker").datepicker({ dateFormat: 'dd-mm-yy' });
            $("#datepicker").datepicker().datepicker("setDate", new Date());
        })
    </script>
<script>
    document.getElementById("files").onchange = function () {
        var reader = new FileReader();
        var fileName = document.getElementById("filename");
        reader.onload = function (e) {
            // get loaded data and render thumbnail.
            document.getElementById("image").src = e.target.result;
        };

        // read the image file as a data URL.
        reader.readAsDataURL(this.files[0]);

    };

    function showFormEdit() {
        var x = document.getElementsByClassName("label-userprofile");
        var y = document.getElementsByClassName("input-userprofile");
        var btnEdit = document.getElementById("btnEdit");
        var btnCancel = document.getElementById("btnCancel");
        var changeButton = document.getElementById("change-button");
        var eventForClose = document.getElementById("eventForClose");
        var eventForShow = document.getElementById("eventForShow");

        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
            y[i].style.display = "block";
        }
        btnEdit.style.display = "inline";
        btnCancel.style.display = "inline";
        changeButton.style.display = "block";
        eventForClose.style.display = "block";
        eventForShow.style.display = "none";
    }

    function cancelFormEdit() {
        var x = document.getElementsByClassName("label-userprofile");
        var y = document.getElementsByClassName("input-userprofile");
        var btnEdit = document.getElementById("btnEdit");
        var btnCancel = document.getElementById("btnCancel");
        var changeButton = document.getElementById("change-button");
        var eventForClose = document.getElementById("eventForClose");
        var eventForShow = document.getElementById("eventForShow");

        for (i = 0; i < x.length; i++) {
            x[i].style.display = "block";
            y[i].style.display = "none";
        }
        btnEdit.style.display = "none";
        btnCancel.style.display = "none";
        changeButton.style.display = "none";
        eventForClose.style.display = "none";
        eventForShow.style.display = "block";
    }
</script>

</html>
<% } %>
<% if(!email.email) { %>
<script>
    window.location.href = "/login"  
</script>
<% } %>
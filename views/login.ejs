<!DOCTYPE html>
<html ng-app="Movie">

    <% include ../layout/head %>

<body ng-controller="loginController" style="padding: 0; margin: 0">
    <% include ../layout/header %>
    <section style="min-height: 518px; padding-top: 100px">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4" style="border: 1px solid coral; border-radius: 10px;">
                    <h1 style="text-align: center; color: coral; font-family: Georgia, 'Times New Roman', Times, serif">Login
                        Page</h1>
                    <form class="form" >
                        <div class="form-group">
                            <label for="exampleInputEmail1" style="color: coral">Email address</label>
                            <input type="email" ng-model="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" style="color: coral">Password</label>
                            <input type="password" ng-model="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <div class="form-group" style="text-align: center;">
                            <button type="submit" ng-click="submit()" class="btn" id="register-button" dis>Login</button>
                            <a href="/forgot" style="color:coral; cursor: pointer;display: block; padding:10px">Forgot Password</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <% include ../layout/footer %>
</body>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
    crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-notify/0.2.0/js/bootstrap-notify.min.js" integrity="sha256-x9MuLegVJYbuND9ufn0Ji5PAoT0FKFt8S5PBPWyuROM=" crossorigin="anonymous"></script>
<script src="/javascripts/User/login.js"></script>
</html>